<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>ðŸ“š Books Inventory</h1>
            <a href="/" class="btn btn-secondary">Dashboard</a>
        </div>

        <a href="/add-book" class="btn btn-primary mb-3">+ Add New Book</a>

        <div class="card shadow-sm">
            <table class="table table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Copies</th> <!-- New Column -->
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (books.length > 0) { %>
                        <% books.forEach(book => { %>
                            <tr>
                                <td><%= book.BookID %></td>
                                <td><strong><%= book.Title %></strong></td>
                                <td><%= book.Authors %></td>
                                <td>
                                    <span class="badge bg-secondary"><%= book.TotalCopies %> Copies</span>
                                </td>
                                <td>
                                    <!-- New Manage Copies Button -->
                                    <a href="/manage-copies/<%= book.BookID %>" class="btn btn-sm btn-info text-white">Copies</a>
                                    
                                    <a href="/edit-book/<%= book.BookID %>" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="/delete-book/<%= book.BookID %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete book?');">Del</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="5" class="text-center">No books found.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>