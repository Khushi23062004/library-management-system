<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Staff</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>ðŸ‘® Staff Management</h1>
            <a href="/" class="btn btn-secondary">Dashboard</a>
        </div>

        <a href="/add-staff" class="btn btn-primary mb-3">+ Add New Staff Member</a>

        <div class="card shadow-sm">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (staffMembers.length > 0) { %>
                        <% staffMembers.forEach(person => { %>
                            <tr>
                                <td><%= person.StaffID %></td>
                                <td><%= person.StaffName %></td>
                                <td><%= person.Username %></td>
                                <td>
                                    <% if(person.Role === 'Admin') { %>
                                        <span class="badge bg-danger">Admin</span>
                                    <% } else { %>
                                        <span class="badge bg-primary">Librarian</span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/delete-staff/<%= person.StaffID %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Remove this staff member?');">Remove</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="5" class="text-center">No staff found.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>