<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Transactions</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>ðŸ”„ Circulation Desk (Transactions)</h1>
            <a href="/" class="btn btn-secondary">Back to Dashboard</a>
        </div>

        <a href="/issue-book" class="btn btn-primary mb-3">Issue New Book</a>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Book Title (Copy ID)</th>
                            <th>Member Name</th>
                            <th>Issue Date</th>
                            <th>Due Date</th>
                            <th>Return Date</th>
                            <th>Status / Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (transactions.length > 0) { %>
                            <% transactions.forEach(txn => { %>
                                <tr>
                                    <td><%= txn.TransactionID %></td>
                                    <td>
                                        <strong><%= txn.Title %></strong> <br>
                                        <small class="text-muted">Copy: <%= txn.CopyID %></small>
                                    </td>
                                    <td><%= txn.MemberName %></td>
                                    <td><%= new Date(txn.IssueDate).toLocaleDateString() %></td>
                                    <td>
                                        <!-- Agar Late hai to Red color me dikhao -->
                                        <% 
                                            const due = new Date(txn.DueDate);
                                            const today = new Date();
                                            const isLate = !txn.ReturnDate && today > due;
                                        %>
                                        <span class="<%= isLate ? 'text-danger fw-bold' : '' %>">
                                            <%= due.toLocaleDateString() %>
                                        </span>
                                        <% if (isLate) { %> <br><small class="text-danger">OVERDUE!</small> <% } %>
                                    </td>
                                    <td>
                                        <%= txn.ReturnDate ? new Date(txn.ReturnDate).toLocaleDateString() : '-' %>
                                    </td>
                                    <td>
                                        <% if (txn.ReturnDate) { %>
                                            <span class="badge bg-success">Returned</span>
                                        <% } else { %>
                                            <!-- Return Button -->
                                            <a href="/return-book/<%= txn.TransactionID %>" 
                                               class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Confirm Return? This will make the book available again.');">
                                                Mark Returned
                                            </a>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="7" class="text-center py-4">No transactions found.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>