<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Issue Book</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow col-md-8 mx-auto">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Issue a Book</h4>
            </div>
            <div class="card-body">
                <form action="/issue-book" method="POST">
                    
                    <!-- Select Member -->
                    <div class="mb-3">
                        <label class="form-label">Select Member</label>
                        <select name="memberId" class="form-select" required>
                            <option value="">-- Choose Member --</option>
                            <% members.forEach(member => { %>
                                <option value="<%= member.MemberID %>">
                                    <%= member.MemberName %> (ID: <%= member.MemberID %>)
                                </option>
                            <% }) %>
                        </select>
                    </div>

                    <!-- Select Book Copy -->
                    <div class="mb-3">
                        <label class="form-label">Select Available Book Copy</label>
                        <select name="copyId" class="form-select" required>
                            <option value="">-- Choose Book --</option>
                            <% books.forEach(book => { %>
                                <option value="<%= book.CopyID %>">
                                    <%= book.Title %> (Copy ID: <%= book.CopyID %>)
                                </option>
                            <% }) %>
                        </select>
                        <div class="form-text text-muted">Only 'Available' copies are shown here.</div>
                    </div>

                    <!-- Due Date -->
                    <div class="mb-3">
                        <label class="form-label">Due Date (Return By)</label>
                        <input type="date" name="dueDate" class="form-control" required>
                    </div>

                    <button type="submit" class="btn btn-primary">Issue Book</button>
                    <a href="/transactions" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>