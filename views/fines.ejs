<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Fines</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>ðŸ’° Fine History</h1>
            <a href="/" class="btn btn-secondary">Back to Dashboard</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Fine ID</th>
                            <th>Member Name</th>
                            <th>Book Title</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (fines.length > 0) { %>
                            <% fines.forEach(fine => { %>
                                <tr>
                                    <td><%= fine.FineID %></td>
                                    <td><strong><%= fine.MemberName %></strong></td>
                                    <td><%= fine.Title %></td>
                                    <td class="text-danger fw-bold">â‚¹<%= fine.FineAmount %></td>
                                    <td><%= new Date(fine.FineDate).toLocaleDateString() %></td>
                                    <td>
                                        <% if (fine.Status === 'Paid') { %>
                                            <span class="badge bg-success">Paid</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Unpaid</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (fine.Status === 'Unpaid') { %>
                                            <a href="/pay-fine/<%= fine.FineID %>" 
                                               class="btn btn-sm btn-success"
                                               onclick="return confirm('Mark this fine as collected?');">
                                                Collect Payment
                                            </a>
                                        <% } else { %>
                                            <span class="text-muted"><small>Completed</small></span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="7" class="text-center py-4">No fines recorded yet.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>