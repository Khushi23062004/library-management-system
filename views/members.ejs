<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Members</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>ðŸ‘¥ Members Directory</h1>
            <a href="/" class="btn btn-secondary">Back to Dashboard</a>
        </div>

        <a href="/add-member" class="btn btn-success mb-3">+ Register New Member</a>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Type</th>
                            <th>Expiry</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (members.length > 0) { %>
                            <% members.forEach(member => { %>
                                <tr>
                                    <td><%= member.MemberID %></td>
                                    <td><strong><%= member.MemberName %></strong></td>
                                    <td><%= member.Email %></td>
                                    <td><%= member.PhoneNumber %></td>
                                    <td><%= member.MembershipType %></td>
                                    <td><%= member.MembershipExpiryDate ? new Date(member.MembershipExpiryDate).toDateString() : 'N/A' %></td>
                                    <td>
                                        <!-- UPDATED: Edit Button ab link hai -->
                                        <a href="/edit-member/<%= member.MemberID %>" class="btn btn-sm btn-warning">Edit</a>

                                        <a href="/delete-member/<%= member.MemberID %>" 
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('Are you sure?');">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="7" class="text-center py-4">No members found.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>